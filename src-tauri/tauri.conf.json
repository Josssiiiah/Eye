{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zen",
  "version": "0.1.0",
  "identifier": "com.zen.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "zen",
        "width": 750,
        "height": 50,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main", "popup", "drag-chat"],
          "permissions": [
            "core:event:default",
            "macos-permissions:default",
            "screenshots:allow-get-screenshotable-monitors",
            "screenshots:allow-get-screenshotable-windows", 
            "screenshots:default",
            "fs:read-files",
            "fs:write-files"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:notes.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
