{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window and popup",
  "windows": ["main", "popup"],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-position",
    "core:window:allow-set-size",
    "core:window:allow-set-focus",
    "core:window:allow-close",
    "sql:default",
    "sql:allow-execute",
    "clipboard-manager:allow-write-text",
    "screenshots:default",
    "macos-permissions:default",
    "fs:default",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" },
        { "path": "$APPSUPPORT" },
        { "path": "$APPSUPPORT/**" }
      ]
    }
  ]
}
